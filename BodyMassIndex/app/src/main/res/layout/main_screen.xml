<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BodyMassIndex" >
    <TextView
        android:id="@+id/Height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="44dp"
        android:text="@string/height"
        android:layout_alignParentStart="false" />
    <TextView
        android:id="@+id/Weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Height"
        android:layout_below="@+id/Height"
        android:layout_marginTop="44dp"
        android:text="@string/weight" />
    <TextView
        android:id="@+id/BME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/Height"
        android:layout_below="@+id/Weight"
        android:layout_marginTop="49dp"
        android:text="@string/bme" />
    <TextView
        android:id="@+id/Situation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BME"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="58dp"
        android:layout_toRightOf="@+id/BME" />
    <EditText
        android:id="@+id/HeightInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Height"
        android:layout_alignBottom="@+id/Height"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:inputType="numberDecimal"
        android:editable="false">
        <requestFocus />
    </EditText>
    <EditText
        android:id="@+id/WeightInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Weight"
        android:layout_alignBottom="@+id/Weight"
        android:layout_alignLeft="@+id/HeightInput"
        android:inputType="number" />
    <EditText
        android:id="@+id/BMEInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/BME"
        android:layout_alignBottom="@+id/BME"
        android:layout_alignLeft="@+id/WeightInput"/>
</RelativeLayout>